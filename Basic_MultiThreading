#include <stdio.h>
#include <string.h>
#include <pthread.h>
#include <unistd.h>

void * printPing(void * arg) {
	
	int i = 0;
	char * strPing = "ping";
	
	while(1) {
		
		printf("%c", strPing[i]);
		fflush(stdout);
		i = (i + 1) % strlen(strPing);
		usleep(100000);
		
	};
	
	return NULL;
	
};

void * printPong(void * arg) {
	
	int i = 0;
	char * strPong = "pong";
	
	while(1) {
		
		printf("%c", strPong[i]);
		fflush(stdout);
		i = (i + 1) % strlen(strPong);
		usleep(100000);
		
	};
	
	return NULL;
	
};

int main (void) {
	
	pthread_t threadPing, threadPong;
	
	pthread_attr_t attr;
	pthread_attr_init(&attr);
	
	pthread_create(&threadPing, &attr, &printPing, NULL);
	pthread_create(&threadPong, &attr, &printPong, NULL);
	
	pthread_join(threadPing, NULL);
	pthread_join(threadPong, NULL);
	
	
	return 0;
	
}
